
@model  Louvor.IPI.Domain.Request.UsuarioRequestConfirmacaoCodigo;
@{
    ViewData["Title"] = "Cadastrar Nova Senha";
}

<div class="row">
    <div class="col-md-12">
        <h2>Cadastro de uma nova senha</h2>


    </div>

</div>

<form asp-action="EfetivacaoAlteracaoSenha" method="post">
    <input type="hidden" value="@ViewBag.UsuarioId" asp-for="@Model.UsuarioId" />
    <input type="hidden" value="@ViewBag.CodigoConfirmacao" asp-for="@Model.codigo" /> 

  <div class="row">
        <div class="col-md-6">
            <label for="Senha1" class="control-label" id="LblSenha1">Nova senha</label>
            <input type="password" id="Senha1" />
        </div>
      <div class="col-md-6">
          <label for="Senha2" class="control-label" id="LblSenha2">Confirmação da senha</label>
          <input type="password" id="Senha2" asp-for="@Model.Senha" />
      </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <input type="reset" class="btn btn-default" value="Limpar senha" />
        </div>
        <div class="col-md-6">
            <input type="submit" value="Alterar senha" class="btn btn-success" />

        </div>
    </div>
</form>
